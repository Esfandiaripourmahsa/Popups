<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Popups.MainPage"
             Title="Flex Layout 2PRO">
    <Grid Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />  
        </Grid.RowDefinitions>
        
        <ScrollView Grid.Row="0" >
            <FlexLayout x:Name="flex" 
                        Wrap="Wrap" JustifyContent="Start" AlignItems="Start" AlignContent="Start">
                
            </FlexLayout>
            
        </ScrollView>

        <Button Grid.Row="1" Text="Altijd onderaan" Padding="50" Clicked="OnAdd_Clicked" />


    </Grid>


</ContentPage>
